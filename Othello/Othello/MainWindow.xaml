            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label Content="Timer :"/>
                <Label Content="{Binding ElementName=Othello, Path=TimerWhite}" />
                <Label Content="Score:" Grid.Row="1"/>
                <Label Content="{Binding ElementName=Othello, Path=WhiteScore}" />
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Timer :"/>
                <Label Content="{Binding ElementName=Othello, Path=TimerBlack}" />
                <Label Content="Score:" Grid.Row="1"/>
                <Label Content="{Binding ElementName=Othello, Path=BlackScore}" />
            </StackPanel>
        </Grid>
